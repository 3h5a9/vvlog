<div class="row my-5">
  <div class="col-md-8 offset-md-2">
    <%= render  "shared/errors", obj: @category %>
    <%= form_for @category do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Post Title" %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, class: 'form-control', rows: '10', placeholder: "Post Content" %>
      </div>
      <%= f.submit(@category.new_record? ? :Publish : "Update", class: 'btn btn-sm btn-success') %>
      <%= link_to  "Cancle", categories_path, class: 'btn btn-sm btn-danger' %>
    <% end %>
  </div>
</div>