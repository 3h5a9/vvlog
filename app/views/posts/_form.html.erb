<div class="row my-5">
  <div class="col-md-12">
    <%= render  "shared/errors", obj: @post %>
    <%= form_for @post do |f| %>
      <div class="form-row">
        <div class="col-md-8">
          <div class="form-group">
            <%= f.text_field :title, class: 'form-control', placeholder: "Post Title" %>
          </div>
          <div class="form-group">
            <%= f.text_area :content, class: 'form-control', rows: '10', placeholder: "Post Content" %>
          </div>
          <%= f.submit(@post.new_record? ? :Publish : "Update", class: 'btn btn-sm btn-success') %>
          <%= link_to  "Cancle", posts_path, class: 'btn btn-sm btn-danger' %>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              Categories
            </div>
            <div class="card-body">
              <ul class="list-group">
              <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
                <li class="list-group-item"><%= b.label(:"data-value" => b.value, class: 'one') { b.check_box + b.text }  %></li>
              <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>